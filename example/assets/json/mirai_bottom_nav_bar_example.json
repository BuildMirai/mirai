{
    "type": "scaffold",
    "appBar": {
        "type": "appBar",
        "title": {
            "type": "text",
            "data": "Mirai Bottom Navigation Bar",
            "align": "center",
            "style": {
                "color": "#ffffff",
                "fontSize": 21
            }
        },
        "backgroundColor": "#99ccff",
        "leading": {
            "type": "iconButton",
            "child": {
                "type": "icon",
                "iconType": "material",
                "icon": "arrow_back",
                "color": "#ffffff"
            },
            "onPressed": {
                "actionType": "navigate",
                "navigationType": "screen",
                "navigationStyle": "pop"
            }
        }
    },
    "body": {
        "type": "listView",
        "shrinkWrap": true,
        "children": [
            {
                "type": "sizedBox",
                "height": 25
            },
            {
                "type": "text",
                "data": "This is an bottom navigation bar example.",
                "style": {
                    "fontSize": 21,
                    "align": "center"
                }
            }
        ]
    },
    "bottomNavigationBar": {
        "type": "bottomNavigationBar",
        "backgroundColor": "#99ccff",
        "selectedItemColor": "#36374b",
        "unselectedItemColor": "#ffffff",
        "items": [
            {
                "type": "navigationBarItem",
                "label": "Search",
                "icon": {
                    "type": "icon",
                    "iconType": "cupertino",
                    "icon": "search",
                    "size": 40
                }
            },
            {
                "type": "navigationBarItem",
                "label": "Profile",
                "icon": {
                    "type": "icon",
                    "iconType": "cupertino",
                    "icon": "profile_circled",
                    "size": 40
                }
            },
            {
                "type": "navigationBarItem",
                "label": "Menue",
                "icon": {
                    "type": "icon",
                    "iconType": "material",
                    "icon": "menu_rounded",
                    "size": 40
                }
            }
        ]
    }
}