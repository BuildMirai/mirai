{
    "type": "scaffold",
    "appBar": {
        "type": "appBar",
        "title": {
            "type": "text",
            "data": "Text Form Field",
            "align": "center",
            "style": {
                "fontSize": 17
            }
        },
        "leading": {
            "type": "iconButton",
            "child": {
                "type": "icon",
                "iconType": "material",
                "icon": "arrow_back",
                "color": "#ffffff"
            },
            "onPressed": {
                "actionType": "navigate",
                "navigationType": "screen",
                "navigationStyle": "pop"
            }
        },
        "backgroundColor": "#99ccff"
    },
    "body": {
        "type": "padding",
        "padding": {
            "top": 12,
            "left": 12,
            "right": 12
        },
        "child": {
            "type": "textFormField",
            "initialValue": "",
            "hintText": "Enter your name",
            "maxLines": 1,
            "keyboardType": "text",
            "textInputAction": "done",
            "textAlign": "start",
            "textCapitalization": "none",
            "textDirection": "ltr",
            "textAlignVertical": "top",
            "obscureText": false,
            "style": {
                "foregroundColor": "#ffffff"
            },
            "decoration": {
                "hintText": "Please enter details"
            },
            "readOnly": false,
            "enabled": true
        }
    }
}