{
    "type": "scaffold",
    "appBar": {
        "type": "appBar",
        "title": {
            "type": "text",
            "data": "Sizedbox",
            "align": "center",
            "style": {
                "fontSize": 21
            }
        },
        "leading": {
            "type": "iconButton",
            "child": {
                "type": "icon",
                "iconType": "material",
                "icon": "arrow_back",
                "color": "#ffffff"
            },
            "onPressed": {
                "actionType": "navigate",
                "navigationType": "screen",
                "navigationStyle": "pop"
            }
        },
        "backgroundColor": "#99ccff"
    },
    "body": {
        "type": "listView",
        "shrinkWrap": true,
        "children": [
            {
                "type": "sizedBox",
                "height": 25
            },
            {
                "type": "text",
                "data": "This is sizedbox widget example.",
                "style": {
                    "fontSize": 21,
                    "align": "center"
                }
            }
        ]
    }
}