{
    "type": "scaffold",
    "appBar": {
        "type": "appBar",
        "title": {
            "type": "text",
            "data": "Mirai Tab Controller",
            "align": "center",
            "style": {
                "color": "#ffffff",
                "fontSize": 21
            }
        },
        "backgroundColor": "#99ccff",
        "leading": {
            "type": "iconButton",
            "child": {
                "type": "icon",
                "iconType": "material",
                "icon": "arrow_back",
                "color": "#ffffff"
            },
            "onPressed": {
                "actionType": "navigate",
                "navigationType": "screen",
                "navigationStyle": "pop"
            }
        }
    },
    "body": {
        "type": "column",
        "mainAxisAlignment": "start",
        "crossAxisAlignment": "center",
        "mainAxisSize": "max",
        "textDirection": "ltr",
        "verticalDirection": "down",
        "children": [
            {
                "type": "sizedBox",
                "height": 25
            },
            {
                "type": "defaultTabController",
                "length": 3,
                "child": {
                    "type": "tabBar",
                    "tabs": [
                        {
                            "type": "icon",
                            "iconType": "material",
                            "icon": "phone",
                            "color": "#ff0000"
                        },
                        {
                            "type": "icon",
                            "iconType": "material",
                            "icon": "tablet",
                            "color": "#ff0000"
                        },
                        {
                            "type": "icon",
                            "iconType": "material",
                            "icon": "computer",
                            "color": "#ff0000"
                        }
                    ]
                }
            }
        ]
    }
}